{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		/* Type Checking */
		"noImplicitAny": true,
		"noImplicitReturns": true,

		"resolveJsonModule": true
	},
	"include": ["./deploy/**/*"],
	"exclude": ["node_modules"]
}
